<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" title="Advance Details" showHeader="true"
		class="sapUiSizeCompact">
		<!-- contentWidth="28%" -->
		<content>
			<VBox class="sapUiSmallMargin">
				<f:SimpleForm editable="false" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12"
					adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3" columnsL="2" columnsM="2"
					singleContainerFullSize="false">
					<f:content>
						<core:Title/>
						<Label text="{i18n>BoardingAllowances}" design="Bold"/>
						<Text id="idBoardingAllownce" text=""/>
						<Label text="{i18n>LodgingEligibility}" design="Bold"/>
						<Text id="idLodgingAllownce"/>
						<Label text="{i18n>ConveyanceEligibility}" design="Bold"/>
						<Text id="idConveyanceAllownce"/>
					</f:content>
				</f:SimpleForm>
			</VBox>
		</content>
		<endButton>
			<Button text="{i18n>Close}" type="Reject" press="onClosePopup"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>