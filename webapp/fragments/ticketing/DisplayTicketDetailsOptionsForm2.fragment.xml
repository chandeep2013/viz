<core:FragmentDefinition xmlns:m="sap.m" xmlns="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<m:VBox class="sapUiSmallMargin">
		<form:SimpleForm editable="false" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="4"
			adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3" columnsL="2" columnsM="2"
			singleContainerFullSize="false">
			<form:content>
				<core:Title/>
				<m:Label text="{i18n>Desc}" design="Bold"/>
				<m:Text id="txtarea2" text="{parts: [ {path: 'itenary2>/collection2/Optiontxt'} ], formatter: '.formatter.onWBSElement'}"/>
				<m:Label text="{i18n>TotalFare}" design="Bold"/>
				<m:Text id="t6" text="{parts: [ {path: 'itenary2>/collection2/Tfare'} ], formatter: '.formatter.onWBSElement'}"/>
				<core:Title/>
				<m:Label text="{i18n>SpecialNotes}" design="Bold"/>
				<m:Text id="t8" text="{parts: [ {path: 'itenary2>/collection2/Spnotes'} ], formatter: '.formatter.onWBSElement'}"/>
				<m:Label text="{i18n>Charges}" design="Bold"/>
				<m:Text id="ch2" text="{ parts: [{path: 'itenary2>/collection2/AddCharge'} ], formatter: '.formatter.ChargeText' }"/>
				<m:Label text="{i18n>Amount}" design="Bold"/>
				<m:Text id="ch2Value" text="{parts: [ {path: 'itenary2>/collection2/AChargeAmt'} ], formatter: '.formatter.onWBSElement'}"/>
			</form:content>
		</form:SimpleForm>
	</m:VBox>
</core:FragmentDefinition>